#!/bin/sh

set -e

case "$1" in
    (install)
    /bin/launchctl load -w /Library/LaunchDaemons/com.openssh.sshd.plist
    ;;
	(upgrade)
	/bin/launchctl unload /Library/LaunchDaemons/com.openssh.sshd.plist
    /bin/launchctl load /Library/LaunchDaemons/com.openssh.sshd.plist
	;;
	(*)
	exit 0
	;;
esac

exit 0